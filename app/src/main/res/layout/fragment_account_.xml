                android:textSize="16sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Email:">
            </TextView>

            <EditText
                android:id="@+id/ProfileInfoEmail_ET"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@android:color/transparent"
                android:editable="false"
                android:textStyle="bold"
                android:hint="..."
                android:textSize="16dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Phone:">
            </TextView>

            <EditText
                android:id="@+id/ProfileInfoPhone_ET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:editable="false"
                android:textStyle="bold"
                android:background="@android:color/transparent"
                android:hint="..."
                android:textSize="16sp"
                />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/Privacy_Layout"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:layout_marginLeft="62dp"
                android:layout_marginTop="215dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/BackToDashboardFromPrivacySettings"
                android:text="Back to Dashboard">
            </TextView>

            <TextView
                android:layout_marginLeft="62dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="32dp"
                android:text="Privacy Settings"
                android:layout_marginBottom="5dp"
                android:textStyle="bold"
                android:gravity="center_horizontal">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62dp"
                android:text="Change Password"
                android:layout_marginBottom="5dp"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62dp"
                android:background="@drawable/rounded_corners_input"
                android:layout_marginRight="62dp">

                <EditText
                    android:id="@+id/OldPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Enter your old password"
                    android:maxLines="1"
                    android:paddingLeft="17dp"
                    android:paddingTop="15dp"
                    android:inputType="textPassword"
                    android:paddingBottom="15dp"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/Password_Logo_2"
                    />
                <ImageView
                    android:id="@+id/Password_Logo_2"
                    android:layout_width="22dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/form_password_icon"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/rounded_corners_input"
                android:layout_marginRight="62dp">

                <EditText
                    android:id="@+id/NewPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="Enter your new password"
                    android:maxLines="1"
                    android:paddingLeft="17dp"
                    android:paddingTop="15dp"
                    android:inputType="textPassword"
                    android:paddingBottom="15dp"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/Password_Logo_3"
                    />
                <ImageView
                    android:id="@+id/Password_Logo_3"
                    android:layout_width="22dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/form_password_icon"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="62dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/rounded_corners_input"
                android:layout_marginRight="62dp">

                <EditText
                    android:id="@+id/NewPasswordRepeat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:hint="confirm your new password"
                    android:maxLines="1"
                    android:paddingLeft="17dp"
                    android:paddingTop="15dp"
                    android:inputType="textPassword"
                    android:paddingBottom="15dp"
                    android:textSize="16sp"
                    android:layout_toRightOf="@id/Password_Logo_4"
                    />
                <ImageView
                    android:id="@+id/Password_Logo_4"
                    android:layout_width="22dp"
                    android:layout_height="15dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="17dp"
                    android:src="@drawable/form_password_icon"
                    />
            </RelativeLayout>

            <Button
                android:layout_width="310dp"
                android:layout_height="45dp"
                android:layout_marginTop="12dp"
                android:text="Change"
                android:layout_gravity="center"
                android:id="@+id/InitiateChange"
                android:background="@drawable/rounded_button"
                />

        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:background="#99000000"
        android:id="@+id/Dialog_Type_Cancel"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:elevation="20dp"
            android:layout_width="250dp"
            android:layout_height="300dp"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="250dp"
                android:layout_height="260dp"
                android:background="@drawable/rounded_card_dialog"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true">

                <TextView
                    android:id="@+id/Dialog_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="80dp"
                    android:text="Uh oh"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/Dialog_MainMessage"
                    android:layout_below="@id/Dialog_Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="15dp"
                    android:text="This username is already taken"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold"/>

                <Button
                    android:id="@+id/Dialog_Cancel_Button"
                    android:layout_width="120dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="25dp"
                    android:background="@drawable/rounded_button"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:text="Cancel"
                    android:textSize="15dp"
                    android:textStyle="bold" />

            </RelativeLayout>
            <ImageView
                android:id="@+id/Error_Cry_Icon"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop"
                android:src="@drawable/dialog_error_icon"
                android:elevation="18dp"/>

        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>